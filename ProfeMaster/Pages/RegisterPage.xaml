<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProfeMaster.Pages.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{StaticResource PmBg}">

    <Grid Padding="16">
        <Border BackgroundColor="{StaticResource PmCard}" StrokeThickness="0" StrokeShape="RoundRectangle 20">
            <VerticalStackLayout Padding="18" Spacing="10">

                <Label Text="Criar conta" FontSize="18" FontAttributes="Bold" />

                <Label Text="E-mail" TextColor="{StaticResource PmMuted}" FontSize="12"/>
                <Entry x:Name="EmailEntry" Keyboard="Email" Placeholder="seuemail@dominio.com" />

                <Label Text="Senha" TextColor="{StaticResource PmMuted}" FontSize="12" Margin="0,8,0,0"/>
                <Entry x:Name="PassEntry" IsPassword="True" Placeholder="mÃ­nimo 6 caracteres" />

                <Button Text="Cadastrar"
                        Margin="0,14,0,0"
                        Background="{StaticResource PmGradient}"
                        Clicked="OnRegisterClicked"/>

                <Button Text="Voltar"
                        BackgroundColor="#243056"
                        Clicked="OnBackClicked"/>

                <Label x:Name="StatusLabel" Text="" TextColor="#FCA5A5" FontSize="12" />

            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
