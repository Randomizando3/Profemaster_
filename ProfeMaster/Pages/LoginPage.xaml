<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProfeMaster.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{StaticResource PmBg}">

    <Grid>
        <!-- Fundo com gradiente suave -->
        <Grid.RowDefinitions>
            <RowDefinition Height="260"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" StrokeThickness="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#6D5BFF" Offset="0"/>
                    <GradientStop Color="#22D3EE" Offset="0.6"/>
                    <GradientStop Color="#FF4FD8" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <VerticalStackLayout Grid.Row="0" Padding="24,48,24,0" Spacing="10">
            <Label Text="ProfeMaster UP" FontSize="26" FontAttributes="Bold" />
            <Label Text="Organize instituições, turmas, aulas e materiais em um só lugar." TextColor="{StaticResource PmBg}" />
        </VerticalStackLayout>

        <Border Grid.Row="1"
                Margin="16,-32,16,16"
                BackgroundColor="{StaticResource PmCard}"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 20">
            <ScrollView>
                <VerticalStackLayout Padding="18" Spacing="10">

                    <Label Text="Entrar" FontSize="18" FontAttributes="Bold" />

                    <Label Text="E-mail" TextColor="{StaticResource PmMuted}" FontSize="12"/>
                    <Entry x:Name="EmailEntry" Keyboard="Email" Placeholder="seuemail@dominio.com" />

                    <Label Text="Senha" TextColor="{StaticResource PmMuted}" FontSize="12" Margin="0,8,0,0"/>
                    <Entry x:Name="PassEntry" IsPassword="True" Placeholder="••••••••" />

                    <Button Text="Entrar"
                            Margin="0,14,0,0"
                            Background="{StaticResource PmGradient}"
                            Clicked="OnLoginClicked"/>

                    <Button Text="Criar conta"
                            BackgroundColor="#243056"
                            Clicked="OnGoRegisterClicked"/>

                    <Label x:Name="StatusLabel"
                           Text=""
                           TextColor="#FCA5A5"
                           FontSize="12"
                           Margin="0,6,0,0"/>

                </VerticalStackLayout>
            </ScrollView>
        </Border>
    </Grid>
</ContentPage>
