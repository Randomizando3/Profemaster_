<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProfeMaster.Pages.Help.TutorialsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#FFFFFF"
    Title=""
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <Color x:Key="PmText">#2B2B2B</Color>
        <Color x:Key="PmMuted">#7B7B7B</Color>
        <Color x:Key="PmStroke">#E6E6E6</Color>
        <Color x:Key="PmSoft">#F2F2F2</Color>

        <LinearGradientBrush x:Key="PmGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#B66AF4" Offset="0" />
            <GradientStop Color="#7E97D9" Offset="1" />
        </LinearGradientBrush>

        <Style x:Key="PmCard" TargetType="Border">
            <Setter Property="BackgroundColor" Value="#FFFFFF" />
            <Setter Property="Stroke" Value="{StaticResource PmStroke}" />
            <Setter Property="StrokeThickness" Value="2" />
            <Setter Property="StrokeShape" Value="RoundRectangle 18" />
            <Setter Property="Padding" Value="14" />
        </Style>

        <!-- Botão-card clicável -->
        <Style x:Key="PmTutorialButton" TargetType="Border">
            <Setter Property="BackgroundColor" Value="#FFFFFF" />
            <Setter Property="Stroke" Value="{StaticResource PmStroke}" />
            <Setter Property="StrokeThickness" Value="2" />
            <Setter Property="StrokeShape" Value="RoundRectangle 18" />
            <Setter Property="Padding" Value="14" />
        </Style>
    </ContentPage.Resources>

    <Grid Padding="18" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
            <Border BackgroundColor="#FFFFFF"
                    Stroke="{StaticResource PmStroke}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 16"
                    Padding="10,8"
                    VerticalOptions="Center">
                <Button Text="Voltar"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource PmText}"
                        FontAttributes="Bold"
                        FontSize="12"
                        Padding="4,0"
                        Clicked="OnBack"/>
            </Border>

            <VerticalStackLayout Grid.Column="1" Spacing="0" VerticalOptions="Center">
                <Label Text="Tutoriais"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="{StaticResource PmText}" />
                <Label Text="Selecione um tópico para abrir o guia."
                       FontSize="11"
                       TextColor="{StaticResource PmMuted}" />
            </VerticalStackLayout>

            <Border Grid.Column="2"
                    BackgroundColor="{StaticResource PmSoft}"
                    Stroke="{StaticResource PmStroke}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 16"
                    Padding="10,8"
                    VerticalOptions="Center">
                <Label Text="Guide"
                       FontSize="11"
                       TextColor="{StaticResource PmMuted}"
                       VerticalOptions="Center"/>
            </Border>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="12">

                <!-- Intro --><!--
                <Border Style="{StaticResource PmCard}">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Central de tutoriais"
                               FontAttributes="Bold"
                               FontSize="13"
                               TextColor="{StaticResource PmText}"/>
                        <Label Text="Cada botão abre uma página com passo a passo e imagens. Você vai criar essas páginas depois em Pages/Help/Tutoriais."
                               FontSize="11"
                               TextColor="{StaticResource PmMuted}"/>
                    </VerticalStackLayout>
                </Border>-->

                <!-- 1 -->
                <Border Style="{StaticResource PmTutorialButton}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnOpenTutorial" CommandParameter="instituicoes_turmas_alunos.html"/>
                    </Border.GestureRecognizers>

                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Como adicionar uma instituição, turmas e alunos?"
                                   FontAttributes="Bold"
                                   FontSize="13"
                                   TextColor="{StaticResource PmText}"/>
                            <Label Text="Cadastro inicial para organizar o app."
                                   FontSize="11"
                                   TextColor="{StaticResource PmMuted}"/>
                        </VerticalStackLayout>

                        <Label Grid.Column="1"
                               Text="›"
                               FontSize="18"
                               TextColor="{StaticResource PmMuted}"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- 2 -->
                <Border Style="{StaticResource PmTutorialButton}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnOpenTutorial" CommandParameter="agenda_como_utilizar.html"/>
                    </Border.GestureRecognizers>

                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Como utilizar a agenda?"
                                   FontAttributes="Bold"
                                   FontSize="13"
                                   TextColor="{StaticResource PmText}"/>
                            <Label Text="Como adicionar planos de aulas, aulas, provas e eventos."
                                   FontSize="11"
                                   TextColor="{StaticResource PmMuted}"/>
                        </VerticalStackLayout>

                        <Label Grid.Column="1"
                               Text="›"
                               FontSize="18"
                               TextColor="{StaticResource PmMuted}"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- 3 -->
                <Border Style="{StaticResource PmTutorialButton}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnOpenTutorial" CommandParameter="aulas_criar_gerenciar.html"/>
                    </Border.GestureRecognizers>

                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Como criar e gerenciar aulas?"
                                   FontAttributes="Bold"
                                   FontSize="13"
                                   TextColor="{StaticResource PmText}"/>
                            <Label Text="Criação, edição, anexos, histórico e organização."
                                   FontSize="11"
                                   TextColor="{StaticResource PmMuted}"/>
                        </VerticalStackLayout>

                        <Label Grid.Column="1"
                               Text="›"
                               FontSize="18"
                               TextColor="{StaticResource PmMuted}"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- 4 -->
                <Border Style="{StaticResource PmTutorialButton}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnOpenTutorial" CommandParameter="planos_criar_gerenciar.html"/>
                    </Border.GestureRecognizers>

                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Como criar e gerenciar planos de aulas?"
                                   FontAttributes="Bold"
                                   FontSize="13"
                                   TextColor="{StaticResource PmText}"/>
                            <Label Text="Planejamento, etapas, objetivos e vinculação."
                                   FontSize="11"
                                   TextColor="{StaticResource PmMuted}"/>
                        </VerticalStackLayout>

                        <Label Grid.Column="1"
                               Text="›"
                               FontSize="18"
                               TextColor="{StaticResource PmMuted}"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- 5 -->
                <Border Style="{StaticResource PmTutorialButton}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnOpenTutorial" CommandParameter="eventos_criar_gerenciar.html"/>
                    </Border.GestureRecognizers>

                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Como criar e gerenciar eventos?"
                                   FontAttributes="Bold"
                                   FontSize="13"
                                   TextColor="{StaticResource PmText}"/>
                            <Label Text="Eventos na agenda e lembretes."
                                   FontSize="11"
                                   TextColor="{StaticResource PmMuted}"/>
                        </VerticalStackLayout>

                        <Label Grid.Column="1"
                               Text="›"
                               FontSize="18"
                               TextColor="{StaticResource PmMuted}"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- 6 -->
                <Border Style="{StaticResource PmTutorialButton}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnOpenTutorial" CommandParameter="provas_criar_gerenciar.html"/>
                    </Border.GestureRecognizers>

                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Como criar e gerenciar provas?"
                                   FontAttributes="Bold"
                                   FontSize="13"
                                   TextColor="{StaticResource PmText}"/>
                            <Label Text="Provas, questões, gabarito e organização."
                                   FontSize="11"
                                   TextColor="{StaticResource PmMuted}"/>
                        </VerticalStackLayout>

                        <Label Grid.Column="1"
                               Text="›"
                               FontSize="18"
                               TextColor="{StaticResource PmMuted}"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- Rodapé -->
                <!--<Border Style="{StaticResource PmCard}">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Dica"
                               FontAttributes="Bold"
                               FontSize="13"
                               TextColor="{StaticResource PmText}"/>
                        <Label Text="Você pode começar criando arquivos HTML simples e depois ir enriquecendo com imagens e passo a passo."
                               FontSize="11"
                               TextColor="{StaticResource PmMuted}"/>
                    </VerticalStackLayout>
                </Border>-->

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
