<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProfeMaster.Pages.Help.Tutoriais.TutorialModalPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#FFFFFF"
    Title=""
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <Color x:Key="PmText">#2B2B2B</Color>
        <Color x:Key="PmMuted">#7B7B7B</Color>
        <Color x:Key="PmStroke">#E6E6E6</Color>
        <Color x:Key="PmSoft">#F2F2F2</Color>

        <Style x:Key="PmCard" TargetType="Border">
            <Setter Property="BackgroundColor" Value="#FFFFFF" />
            <Setter Property="Stroke" Value="{StaticResource PmStroke}" />
            <Setter Property="StrokeThickness" Value="2" />
            <Setter Property="StrokeShape" Value="RoundRectangle 18" />
            <Setter Property="Padding" Value="14" />
        </Style>
    </ContentPage.Resources>

    <Grid Padding="18" RowSpacing="12" RowDefinitions="Auto,*">

        <!-- TOP BAR (igual TutorialsPage) -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
            <Border BackgroundColor="#FFFFFF"
                    Stroke="{StaticResource PmStroke}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 16"
                    Padding="10,8"
                    VerticalOptions="Center">
                <Button Text="Voltar"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource PmText}"
                        FontAttributes="Bold"
                        FontSize="12"
                        Padding="4,0"
                        Clicked="OnBack"/>
            </Border>

            <VerticalStackLayout Grid.Column="1" Spacing="0" VerticalOptions="Center">
                <Label x:Name="TitleLabel"
                       Text="Tutorial"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="{StaticResource PmText}" />
                <Label x:Name="SubLabel"
                       Text=""
                       FontSize="11"
                       TextColor="{StaticResource PmMuted}" />
            </VerticalStackLayout>

            <Border Grid.Column="2"
                    BackgroundColor="{StaticResource PmSoft}"
                    Stroke="{StaticResource PmStroke}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 16"
                    Padding="10,8"
                    VerticalOptions="Center">
                <Label Text="Guide"
                       FontSize="11"
                       TextColor="{StaticResource PmMuted}"
                       VerticalOptions="Center"/>
            </Border>
        </Grid>

        <!-- WEBVIEW -->
        <Border Grid.Row="1"
                BackgroundColor="#FFFFFF"
                Stroke="{StaticResource PmStroke}"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 18"
                Padding="0">
            <WebView x:Name="Web" />
        </Border>

    </Grid>
</ContentPage>
