        <Color x:Key="PmIndigo">#7E97D9</Color>
        <Color x:Key="PmViolet">#B66AF4</Color>
    </ContentPage.Resources>

    <Grid Padding="18" RowSpacing="14" RowDefinitions="Auto,Auto,*">

