                            </VerticalStackLayout>

                            <Button Grid.RowSpan="2" Grid.ColumnSpan="2"
                                    BackgroundColor="Transparent"
                                    Clicked="OnGoAgenda" />
                        </Grid>
                    </Border>

                    <!-- Planos -->
                    <Border Grid.Row="1" Grid.Column="0"
                            BackgroundColor="#FFFFFF"
                            Stroke="{StaticResource PmStroke}"
                            StrokeThickness="2"
                            StrokeShape="RoundRectangle 18"
                            Padding="14">
                        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,*" ColumnSpacing="12">
                            <Border WidthRequest="38" HeightRequest="38"
