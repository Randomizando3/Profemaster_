<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProfeMaster.Pages.Tools.NotesPostItPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#FFFFFF"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <Color x:Key="PmText">#2B2B2B</Color>
        <Color x:Key="PmMuted">#7B7B7B</Color>
        <Color x:Key="PmStroke">#E6E6E6</Color>
        <Color x:Key="PmSoft">#F2F2F2</Color>

        <LinearGradientBrush x:Key="PmGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#B66AF4" Offset="0" />
            <GradientStop Color="#7E97D9" Offset="1" />
        </LinearGradientBrush>

        <Style x:Key="PmBtnPrimary" TargetType="Button">
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="#FFFFFF" />
            <Setter Property="Background" Value="{StaticResource PmGradient}" />
            <Setter Property="Padding" Value="14,12" />
            <Setter Property="HeightRequest" Value="46" />
        </Style>

        <Style x:Key="PmBtnSoft" TargetType="Button">
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="{StaticResource PmText}" />
            <Setter Property="BackgroundColor" Value="{StaticResource PmSoft}" />
            <Setter Property="Padding" Value="14,12" />
            <Setter Property="HeightRequest" Value="46" />
        </Style>
    </ContentPage.Resources>

    <Grid Padding="18" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
            <Border BackgroundColor="#FFFFFF"
                    Stroke="{StaticResource PmStroke}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 16"
                    Padding="10,8"
                    VerticalOptions="Center">
                <Button Text="Voltar"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource PmText}"
                        FontAttributes="Bold"
                        FontSize="12"
                        Padding="4,0"
                        Clicked="OnBack"/>
            </Border>

            <VerticalStackLayout Grid.Column="1" Spacing="0" VerticalOptions="Center">
                <Label Text="Notas (Post-it)"
                       FontAttributes="Bold"
                       FontSize="16"
                       TextColor="{StaticResource PmText}"/>
                <Label Text="Rápidas, simples e salvas no aparelho."
                       FontSize="11"
                       TextColor="{StaticResource PmMuted}"/>
            </VerticalStackLayout>

            <!-- Badge contador/limite -->
            <Border Grid.Column="2"
                    BackgroundColor="{StaticResource PmSoft}"
                    Stroke="{StaticResource PmStroke}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 16"
                    Padding="10,8"
                    VerticalOptions="Center">
                <Label x:Name="CountBadge"
                       Text="Notas: 0/0"
                       FontSize="11"
                       TextColor="{StaticResource PmMuted}"/>
            </Border>
        </Grid>

        <!-- Composer -->
        <Border Grid.Row="1"
                BackgroundColor="#FFFFFF"
                Stroke="{StaticResource PmStroke}"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 18"
                Padding="14">
            <VerticalStackLayout Spacing="10">

                <Label Text="Nova nota"
                       FontAttributes="Bold"
                       FontSize="12"
                       TextColor="{StaticResource PmText}"/>

                <Border BackgroundColor="#FFFFFF"
                        Stroke="{StaticResource PmStroke}"
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 14"
                        Padding="10,8">
                    <Editor x:Name="NewNoteEditor"
                            AutoSize="TextChanges"
                            Placeholder="Escreva algo rápido..."
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource PmText}"
                            PlaceholderColor="{StaticResource PmMuted}"
                            FontSize="13"/>
                </Border>

                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                    <Button Text="Limpar"
                            Style="{StaticResource PmBtnSoft}"
                            Clicked="OnClearNew"/>
                    <Button Grid.Column="1"
                            x:Name="AddBtn"
                            Text="Adicionar"
                            Style="{StaticResource PmBtnPrimary}"
                            Clicked="OnAddNote"/>
                </Grid>

            </VerticalStackLayout>
        </Border>

        <!-- List -->
        <CollectionView Grid.Row="2" x:Name="NotesList" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,0,0,12"
                            Stroke="{StaticResource PmStroke}"
                            StrokeThickness="2"
                            StrokeShape="RoundRectangle 18"
                            Padding="12"
                            BackgroundColor="{Binding BgHex}">
                        <VerticalStackLayout Spacing="10">

                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                <Label Text="{Binding TitleLine}"
                                       FontAttributes="Bold"
                                       FontSize="12"
                                       TextColor="{StaticResource PmText}" />

                                <Button Grid.Column="1"
                                        Text="Excluir"
                                        BackgroundColor="#3A2040"
                                        TextColor="#FFFFFF"
                                        CornerRadius="14"
                                        FontAttributes="Bold"
                                        FontSize="11"
                                        Padding="12,8"
                                        Clicked="OnDelete"
                                        CommandParameter="{Binding .}"/>
                            </Grid>

                            <Label Text="{Binding Text}"
                                   FontSize="13"
                                   TextColor="{StaticResource PmText}" />

                            <Label Text="{Binding CreatedLabel}"
                                   FontSize="10"
                                   TextColor="{StaticResource PmMuted}" />

                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
