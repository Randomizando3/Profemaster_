<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProfeMaster.Pages.ResetPasswordPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#FFFFFF"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <Color x:Key="PmText">#2B2B2B</Color>
        <Color x:Key="PmMuted">#7B7B7B</Color>
        <Color x:Key="PmStroke">#E6E6E6</Color>
        <Color x:Key="PmSoft">#F2F2F2</Color>

        <Color x:Key="PmPurple">#8B2CE2</Color>
        <Color x:Key="PmIndigo">#7E97D9</Color>
        <Color x:Key="PmViolet">#B66AF4</Color>
    </ContentPage.Resources>

    <Grid Padding="18" RowSpacing="14" RowDefinitions="Auto,Auto,*">

        <!-- Top bar simples -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*" ColumnSpacing="10">
            <Button Text="←"
                    BackgroundColor="{StaticResource PmSoft}"
                    TextColor="{StaticResource PmText}"
                    CornerRadius="14"
                    HeightRequest="38"
                    WidthRequest="44"
                    Clicked="OnBack" />

            <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                <Label Text="Recuperar senha"
                       FontAttributes="Bold"
                       FontSize="18"
                       TextColor="{StaticResource PmText}" />
                <Label Text="Vamos te enviar um link por e-mail."
                       FontSize="11"
                       TextColor="{StaticResource PmMuted}" />
            </VerticalStackLayout>
        </Grid>

        <!-- Card -->
        <Border Grid.Row="1"
                BackgroundColor="#FFFFFF"
                Stroke="{StaticResource PmStroke}"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 18"
                Padding="14">

            <VerticalStackLayout Spacing="10">
                <Label Text="E-mail"
                       FontSize="12"
                       FontAttributes="Bold"
                       TextColor="{StaticResource PmText}" />

                <Border Stroke="{StaticResource PmStroke}"
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 14"
                        BackgroundColor="#FFFFFF"
                        Padding="12,8">
                    <Entry x:Name="EmailEntry"
                           Placeholder="seuemail@dominio.com"
                           Keyboard="Email"
                           TextColor="{StaticResource PmText}"
                           PlaceholderColor="{StaticResource PmMuted}" />
                </Border>

                <Button Text="Enviar link"
                        Clicked="OnSend"
                        CornerRadius="14"
                        FontAttributes="Bold"
                        FontSize="12"
                        TextColor="#FFFFFF"
                        BackgroundColor="{StaticResource PmPurple}"
                        HeightRequest="42" />

                <Label Text="Se o e-mail existir, você receberá as instruções."
                       FontSize="10"
                       TextColor="{StaticResource PmMuted}" />
            </VerticalStackLayout>
        </Border>

    </Grid>
</ContentPage>
